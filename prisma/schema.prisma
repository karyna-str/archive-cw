generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Таблиця 1: Книги
model Book {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @map("user_id") // ID користувача з Clerk (зв'язок логічний)

  title        String
  fileUrl      String?
  fileKey      String?
  content      String?
  description  String?
  size         Int?

  wordCount    Int      @default(0)
  language     String   @default("ukr")
  type         String   @default("TEXT")

  // Зв'язок з Категорією (Замість простого рядка)
  category     Category? @relation(fields: [categoryId], references: [id])
  categoryId   String?   @db.ObjectId

  // Зв'язок з Автором (Замість простого рядка)
  author       Author?   @relation(fields: [authorId], references: [id])
  authorId     String?   @db.ObjectId

  // Зв'язок із журналом завантажень
  downloads    DownloadLog[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
}

// Таблиця 2: Категорії (Довідник)
model Category {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String @unique
  books Book[] // Зворотній зв'язок: в категорії багато книг
}

// Таблиця 3: Автори (Довідник)
model Author {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String @unique
  bio   String? // Біографія автора (опціонально)
  books Book[] // Зворотній зв'язок: в автора багато книг
}

// Таблиця 4: Статистика завантажень (Хто, що і коли скачав)
model DownloadLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId

  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId    String   @db.ObjectId

  userId    String   // Хто скачав (Clerk ID)
  downloadedAt DateTime @default(now())
}